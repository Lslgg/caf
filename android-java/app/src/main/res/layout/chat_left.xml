<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/msg_time_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#FF000000" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.creativearmy.template.i052.CircleImageView
            android:layout_alignParentLeft="true"
            android:id="@+id/msg_left_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_my_head"/>
        <TextView
            android:layout_toRightOf="@id/msg_left_img"
            android:id="@+id/msg_content"
            android:textColor="#FF000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="8dp"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@drawable/cot_chat_left"
            />
        <ImageView
            android:layout_toRightOf="@id/msg_left_img"
            android:id="@+id/msg_img_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="8dp"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@drawable/cot_chat_left"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>